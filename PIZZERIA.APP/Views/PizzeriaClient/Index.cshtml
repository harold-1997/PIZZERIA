@{
    ViewData["Title"] = "Home Page";
}


<div class="row justify-content-center">

    <div class="col-10">

        <div class="alert alert-info" role="alert">
            PIZZERIA BAMBINO
        </div>
        <a href="@Url.Action("Ingredientes","PizzeriaClient")" type="button" class="btn btn-primary btn-sm boton-nuevo-empleado">Ingredientes</a>
        <a href="@Url.Action("Pedidos","PizzeriaClient")" type="button" class="btn btn-primary btn-sm boton-nuevo-empleado">Pedidos</a>

        <table class="table table-striped" id="tablaPizzas">
            <thead>
                <tr>
                    <th>Tipo de Pizza</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>

    </div>
</div>


<div class="modal fade" id="formModalIngredientes" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="staticBackdropLabel">Ingredientes</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <hr class="mt-2 mb-2">
                <div class="row py-3 px-4">
                    <div class="card mb-2 table-responsive shadow" id="card-ing" style="height: 300px;">
                        <div id="lista-ing">
                        </div>

                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-12">
                        <div id="mensajeError" class="alert alert-danger" role="alert" hidden="true">
                            A simple Danger message
                        </div>
                    </div>
                </div>


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <script src="~/js/index.js"></script>
}


