@{
    ViewData["Title"] = "Home Page";
}


<div class="row justify-content-center">

    <div class="col-10">

        <div class="alert alert-info" role="alert">
            PIZZERIA BAMBINO
        </div>
        <a href="@Url.Action("Index","PizzeriaClient")" type="button" class="btn btn-primary btn-sm boton-nuevo-empleado">Volver</a>

        <table class="table table-striped" id="tablaPedidos">
            <thead>
                <tr>
                    <th>Id Pedido</th>
                    <th>Tipo de Pizza</th>
                    <th>Proceso</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>

    </div>
</div>

<div class="modal fade" id="formModalPizzas" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="staticBackdropLabel">Pizzas</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                
                <hr class="mt-2 mb-2">
                <div class="row py-3 px-4">
                    <div class="card mb-2 table-responsive shadow" id="card-pizzas" style="height: 300px;">
                        <div id="lista-pizzas">
                            
                        </div>

                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-12">
                        <div id="mensajeError" class="alert alert-danger" role="alert" hidden="true">
                            A simple Danger message
                        </div>
                    </div>
                </div>


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="modalEmpleado" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal Empleado</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <div class="mb-3">
                    <label class="form-label">Nombre Completo</label>
                    <input type="text" class="form-control" id="txtNombreCompleto" autocomplete="off">
                </div>

                <div class="mb-3">
                    <label class="form-label">Departamento</label>
                    <select class="form-select" id="cboDepartamento"></select>
                </div>

                <div class="mb-3">
                    <label class="form-label">Sueldo</label>
                    <input type="number" class="form-control" id="txtSueldo">
                </div>

                <div class="mb-3">
                    <label class="form-label">Fecha Contrato</label>
                    <input type="text" class="form-control" id="txtFechaContrato">
                </div>


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary boton-guardar-cambios-empleado">Guardar</button>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <script src="~/js/index.js"></script>
}


